<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/editTextFragment"
        android:name="com.example.md_blinkov.EditTextFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <fragment
        android:id="@+id/radioGroupFragment"
        android:name="com.example.md_blinkov.RadioGroupFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/updateButtonFragment"
        android:name="com.example.md_blinkov.UpdateButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/eraseButtonFragment"
        android:name="com.example.md_blinkov.EraseButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
